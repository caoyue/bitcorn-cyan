for post in posts
    .entry
        .title
            a(href="{{post.url}}")= post.title
        .content= post.content.opening or post.content
        div
            ul.info
                li posted on {{ post.date.format('%Y-%m-%d %H:%M') }}
                for tag in post.tags
                    li
                        a(href="/tags/{{ tag | urlencode }}")= tag
                    if request.is_admin
                        li
                            a(href="{{post.url}}?action=edit",target="_blank") Edit
.pager
    if paginator.has_previous
        a.pre(href="{{ paginator.previous_page_url }}") Previous
    |   
    if paginator.has_next
        a.next(href="{{ paginator.next_page_url}}") Next
